#include <iostream>
#include <vector>

using namespace std;

int main()
{
	int n;
	cin >> n;

	vector<int> a(n);

	for (int i = 0; i < n; i++)
	{
		cin >> a[i];
	}

	int police_count = 0;
	int thief_count = 0;

	for (int i = 0; i < n; i++)
	{
		if (a[i] > 0)
		{
			police_count += a[i];
		}
		else
		{
			if (police_count > 0)
			{
				police_count--;
			}
			else
			{
				thief_count++;
			}
		}
	}

	cout << thief_count << endl;

	return 0;
}
