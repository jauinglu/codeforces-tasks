#include <iostream>
#include <vector>

using namespace std;

int main() 
{
    int d, sumTime;
    cin >> d >> sumTime;

    vector<int> minTime(d), maxTime(d);
    int minSum = 0, maxSum = 0;

    for (int i = 0; i < d; i++) 
    {
        cin >> minTime[i] >> maxTime[i];
       
        minSum += minTime[i];
        maxSum += maxTime[i];
    }

    if (sumTime < minSum || sumTime > maxSum) 
    {
        cout << "NO" << endl;
        return 0;
    }
    else
    {
        cout << "YES" << endl;
    }

    vector<int> schedule(d);
    for (int i = 0; i < d; i++) 
    {
        schedule[i] = minTime[i];
    }

    int currentSum = minSum;
    int remaining = sumTime - minSum;

    for (int i = 0; i < d && remaining > 0; i++) 
    {
        int available = maxTime[i] - minTime[i];
        int add = min(available, remaining);
        schedule[i] += add;
        remaining -= add;
    }

    for (int i = 0; i < d; i++) 
    {
        cout << schedule[i];
        if (i < d - 1) 
        {
            cout << " ";
        }
    }
    cout << endl;

    return 0;
}
