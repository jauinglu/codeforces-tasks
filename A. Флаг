#include <iostream>
#include <vector>

using namespace std;

void solve()
{
    int n, m;
    cin >> n >> m;
    
    char** a = new char*[n]; 

    for (int i = 0; i < n; i++)
    {
        a[i] = new char[m];
    }

    for (int i = 0; i < n; i++)
    {
        for (int j = 0; j < m; j++)
        {
            cin >> a[i][j]; 
        }
    }
    
    bool isValid = true;

    for (int i = 0; i < n; i++)
    {
        for (int j = 1; j < m; j++)
        {
            if (a[i][j] != a[i][0])
            {
                isValid = false;
                break;
            }
        }
        if (!isValid) break;
    }

    if (isValid) 
    {
        for (int i = 1; i < n; i++)
        {
            if (a[i][0] == a[i-1][0])
            {
                isValid = false;
                break;
            }
        }
    }

    cout << (isValid ? "YES" : "NO") << endl;

    for (int i = 0; i < n; i++)
    {
        delete[] a[i];
    }

    delete[] a;
}

int main()
{
    solve();
    return 0;
}
