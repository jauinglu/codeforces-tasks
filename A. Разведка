#include <iostream>
#include <vector>
#include <cmath>

using namespace std;

int main()
{
    int n, d;
    cin >> n >> d;

    vector<int> a(n);
    for (int i = 0; i < n; i++)
    {
        cin >> a[i];
    }

    long long count = 0;

    for (int i = 0; i < n; i++)
    {
        for (int j = i + 1; j < n; j++)
        {
            if (abs(a[i] - a[j]) <= d)
            {
                count += 2; 
            }
        }
    }

    cout << count << endl;
    return 0;
}
